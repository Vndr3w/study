server {
    listen 80;

    location ~* \.(jpg)$ {
        alias /var/www/images/;
        expires 30d;
        access_log off;
    }

    location / {
        proxy_pass http://127.0.0.1:8080;  # HAProxy слушает на 8080 порту
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
